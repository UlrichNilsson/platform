apiVersion: apps/v1 # for versions before 1.9.0 use apps/v1beta2
kind: Deployment
metadata:
  name: utilityapi
  labels:
    app: utilityapi
spec:
  replicas: 1 # tells deployment to run 2 pods matching the template
  strategy:
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 0
    type: RollingUpdate 
  selector:
    matchLabels:
      app: utilityapi
  template:
    metadata:
      labels:
        app: utilityapi
    spec:
      containers:
      - name: utilityapi
        image: ulrichnilsson/utilityapi:latest
        ports:
          - name: metrics
            containerPort: 5000
            protocol: TCP
      #imagePullPolicy: Always
